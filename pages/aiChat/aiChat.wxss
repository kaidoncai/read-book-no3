.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.chat-messages {
  flex: 1;
  padding: 20rpx;
}

.message {
  margin-bottom: 20rpx;
  display: flex;
  align-items: flex-start;
}

.message.ai {
  flex-direction: row;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: #4CAF50;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 12rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.message.ai .content {
  background: #E8F5E9;
}

.input-area {
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
}

.chat-input {
  flex: 1;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.send-btn {
  width: 160rpx;
  background: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 0;
  line-height: 80rpx;
} 