.analysis-container {
  padding: 20rpx;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #4CAF50;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.chart-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.chart {
  width: 100%;
  height: 400rpx;
}

.insights-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.insight-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.insight-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.insight-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 