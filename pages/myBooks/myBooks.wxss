.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

.book-list {
  margin-top: 20rpx;
}

.book-item {
  margin-bottom: 20rpx;
}

.book-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  background: #fff;
  border-radius: 0 0 12rpx 12rpx;
  margin-top: -12rpx;
}

.status-btn {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 30rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.add-btn {
  display: inline-block;
  margin-top: 20rpx;
  padding: 20rpx 60rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
} 