.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.auth-btn {
  text-align: center;
  padding: 20rpx;
  background: #4CAF50;
  color: white;
  border-radius: 8rpx;
}

.search-section {
  margin: 20rpx 0;
}

.search-box {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.search-input {
  flex: 1;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.search-btn {
  width: 160rpx;
  background: #4CAF50;
  color: white;
  font-size: 28rpx;
  padding: 0;
  line-height: 80rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0;
}

.book-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
} 